{
  "name": "nist-csf-2-mcp-server",
  "version": "1.0.0",
  "description": "MCP server implementation for NIST Cybersecurity Framework 2.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:secure": "tsx watch src/server.ts",
    "start": "node dist/index.js",
    "start:secure": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:security": "jest tests/security --coverage",
    "seed:questions": "tsx scripts/generate-comprehensive-questions.ts && tsx scripts/import-comprehensive-questions.ts",
    "import:framework": "tsx scripts/import-framework-fixed.ts",
    "import:csf-framework": "tsx scripts/import-csf-framework.ts",
    "import:guidance": "tsx scripts/import-implementation-guidance.ts",
    "cleanup:subcategories": "tsx scripts/cleanup-subcategories.ts",
    "import:benchmarks": "tsx scripts/import-benchmarks.ts",
    "db:init": "npm run build && npm run import:csf-framework && npm run seed:questions",
    "db:verify": "tsx scripts/verify-database.ts",
    "docker:build": "docker build -t nist-csf-mcp-server .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "mcp",
    "nist",
    "csf",
    "cybersecurity",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
